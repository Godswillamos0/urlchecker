{
  "manifest_version": 3,
  "name": "Send Tab URL",
  "version": "1.0",
  "description": "Sends the current tab URL to an API endpoint.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
